    head
     meta(charset='utf-8')
     // -定义变量 变量值也可以
         1.直接在页面内声明变量并赋值---优先级最高 - var course ='jade study'
         2.通过粗暴的命令行传参：jade index.jade -P -w -obj '{"course":"jade study"}'
         3.通过json文件传参 jade index.jade -P -w -O package.json 命令
     title #{course.toUpperCase()}---#{title}
    body
       h2 mixin
       mixin lesson
        p jade study
       +lesson
       p -------------
       //带参数
       mixin study(name,data)
        p #{name}
        ul.data
            each item in data
                li= item
       +study('hank',['node','jade','express'])
       //mixin嵌套
       mixin group(student)
        h4 #{student.name}
        +study(student.name,student.arrs)
       +group({name:'tim',arrs:['node1','jade2','express3']})
       //mixin内链代码块
       mixin team(slogon)
        h4 #{slogon}
        if block
            block
        else
           p no team
       +team('slogon')
           p Good job!
       //mixin 传递属性
       mixin attr(name)
        p(class!=attributes.class) #{name}
       +attr('attr')(class='magic')
       //mixin 更简单点的传递属性
       mixin attrs(name)
        p&attributes(attributes) #{name}
       +attrs('attrs2')(class='magic2',id='attrid')

       //当有的时候在mixin里传递的参数，但是有不确定参数的个数，应该怎么办，如下：
       mixin magic(name,...items)
        ul(class='#{name}')
            each item in items
                li= item
       +magic('magic','node','jade','express','...')
       p
       br
       h2 流程
       h3  for each
       - var house = {name:'房产',type:'二手房'}
       - for (var k in house)
            p=house[k]
       h3 each
         each value,key in house
            p #{key}:#{value}


       h3 each遍历数组
       - var arrs =['node','jade','express']
        each item in arrs
            p=item
       h3 each 嵌套循环
       - var sections =[{id:1,items:['a','b']},{id:2,items:['c','d']}]
       dl
         each section in sections.length>0?sections:[{id:3,items:['d','e']}]
           dt= section.id
           each item in section.items
             dd= item
       h3 while 循环
       - var n=0
        ul
            while n<4
                li=n++
        h3 if else
        - var ishouse =true
        - var lessons = ['jade','node']
        if lessons
            if lessons.length>2
                p more than 2 :#{lessons.join(',')}
            else if lessons.length>1
                p more than 1: #{lessons.join(',')}
            else
                p no lesson
        else
            p no lesson

       br
       h3 unless
       unless !ishouse
           p #{lessons.length}--unless
       br
       h3 case
       - var name = "jade"
        case name
            when "Bob"
                p Hi Bob!
            when "Alice"
                p Howdy Alice!
            when "jade" : p hi jade
            default
                p Hello #{name}!


       h2 转义
       - var data='text'
       - var datahtml ='<script>alert(1);</script>' //未转义
       p #{data}
       p #{datahtml}
       p !{datahtml}
       p=data
       p=datahtml
       p!=datahtml
       p \#{htmldata}
       p !\{htmldata}

